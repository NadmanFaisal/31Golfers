// Tells prisma to generate a client to interact with DB 
generator client {
  provider = "prisma-client-js"
}

// Connects to the DB using the URL
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
}